generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Provider {
  github
  gitlab
}

enum RepositoryRole {
  owner
  member
}

enum InvitationStatus {
  pending
  accepted
  declined
}

enum PullRequestStatus {
  draft
  sent
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  password  String?  // nullable, because provider-only accounts may not have a password
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  refreshTokens    RefreshToken[]
  oauthIds         UserOAuth[]
  repositories     Repository[]        @relation("CreatedRepositories")
  memberships      RepositoryMember[]
  invitationsSent  Invitation[]        @relation("InvitedBy")
  pullRequests     PullRequest[]

  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("refresh_tokens")
}

model UserOAuth {
  id             String   @id @default(uuid()) @db.Uuid
  userId         String   @db.Uuid

  provider       Provider
  providerUserId String
  username       String
  connectedAt    DateTime @default(now())

  user           User     @relation(fields: [userId], references: [id])

  @@unique([provider, providerUserId])
  @@index([userId])
  @@map("user_oauth")
}


model ProviderInstallation {
  id             String   @id @default(uuid()) @db.Uuid
  provider       Provider
  installationId String   // GitHub installation_id or GitLab equivalent
  accountLogin   String   // org or user name
  accountType    String   // "user" | "organization"
  createdAt      DateTime @default(now())
  repositories   Repository[]

  @@unique([provider, installationId])
}

model Repository {
  id              String   @id @default(uuid()) @db.Uuid
  provider        Provider
  providerRepoId  String
  owner           String
  name            String
  defaultBranch   String

  installationId  String   @db.Uuid
  installation    ProviderInstallation @relation(fields: [installationId], references: [id])

  createdById     String   @db.Uuid
  createdAt       DateTime @default(now())

  createdBy       User     @relation("CreatedRepositories", fields: [createdById], references: [id])
  members         RepositoryMember[]
  invitations     Invitation[]
  pullRequests    PullRequest[]

  @@unique([provider, providerRepoId])
  @@index([createdById])
}

model RepositoryMember {
  id            String          @id @default(uuid()) @db.Uuid

  repositoryId  String          @db.Uuid
  userId        String          @db.Uuid
  role          RepositoryRole
  joinedAt      DateTime        @default(now())

  repository    Repository      @relation(fields: [repositoryId], references: [id])
  user          User            @relation(fields: [userId], references: [id])

  @@unique([repositoryId, userId])
  @@index([userId])
  @@map("repository_members")
}

model Invitation {
  id            String             @id @default(uuid()) @db.Uuid

  repositoryId  String             @db.Uuid
  email         String
  invitedById   String             @db.Uuid
  status        InvitationStatus
  createdAt     DateTime           @default(now())

  repository    Repository         @relation(fields: [repositoryId], references: [id])
  invitedBy     User               @relation("InvitedBy", fields: [invitedById], references: [id])

  @@unique([repositoryId, email])
  @@map("invitations")
}

model PullRequest {
  id                String             @id @default(uuid()) @db.Uuid

  repositoryId      String             @db.Uuid
  createdById       String             @db.Uuid

  baseBranch        String
  compareBranch     String
  language          String
  title             String
  description       String
  providerPrUrl     String?            // nullable, only after send
  status            PullRequestStatus  @default(draft)

  createdAt         DateTime           @default(now())

  repository        Repository @relation(fields: [repositoryId], references: [id])
  createdBy         User       @relation(fields: [createdById], references: [id])

  @@index([repositoryId])
  @@index([createdById])
  @@map("pull_requests")
}
